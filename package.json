{
  "name": "pern-login-main",
  "version": "1.0.0",
  "description": "Simple React + ExpressJS + PostgreSQL(WIP) Login web page.",
  "main": "index.js",
  "scripts": {
    "server-dep": "npm install",
    "client-dep": "cd client && npm install",
    "all-dep": "npm run server-dep && npm run client-dep",
    "server-dev": "npx nodemon index.js",
    "client-dev": "cd client && npm start dev",
    "start-dev": "concurrently \"npm run server-dev\" \"npm run client-dev\""
  },
  "author": "raul escabia",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "eslint": "^8.42.0",
    "express": "^4.18.2",
    "nodemon": "^2.0.22"
  }
}
